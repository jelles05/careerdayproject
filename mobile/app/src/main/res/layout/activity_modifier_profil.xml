<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ModifierProfil">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        app:srcCompat="@drawable/logo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#EC2F41"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:text="MON PROFIL"
            android:textColor="#E6FAFAFA"
            android:textSize="24sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/profil_image"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:layout_marginLeft="70dp"
                    android:layout_marginBottom="15dp"
                    android:layout_weight="9"
                    app:srcCompat="@drawable/logo_user" />

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/btn_save"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="9"
                        android:background="#00FFFFFF"
                        app:srcCompat="@drawable/btn_save" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:layout_weight="9"
                        android:text="enregistrer"
                        android:textColor="#101010"
                        android:textSize="13sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#000000"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="#F4F2F2">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/profil_nom"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:background="#00090909"
                            android:hint="Nom"
                            android:textAlignment="center"
                            android:textColor="#F6F2F2"
                            android:textColorHint="#FAF9F9" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="#333333"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColorHint="#F4F2F2">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/profil_prenom"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:background="#00090909"
                            android:hint="PrÃ©nom"
                            android:textAlignment="center"
                            android:textColor="#F6F2F2"
                            android:textColorHint="#FAF9F9" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="#000000"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColorHint="#F4F2F2">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/profil_email"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:background="#00090909"
                            android:hint="Email"
                            android:textAlignment="center"
                            android:textColor="#F6F2F2"
                            android:textColorHint="#FAF9F9" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="#333333"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColorHint="#F4F2F2">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/profil_password"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:background="#00090909"
                            android:hint="Mot de passe"
                            android:textAlignment="center"
                            android:textColor="#F6F2F2"
                            android:textColorHint="#FAF9F9" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>


    </LinearLayout>
</LinearLayout>